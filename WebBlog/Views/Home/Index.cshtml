@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Home Page";
}

<div class="blogs content">
    @if(Model.Count() > 0)
    {
        <h2>All Blogs</h2>
        @foreach(var ele in Model)
        {
            <a asp-controller="Blogs" asp-action="Detail" asp-route-id="@ele.Id" class="single">
                <h4>@ele.Name</h4>
                <p class="author">by:@ele.Author?.Name</p>
            </a>
        }
    }
    else
    {
        <h2>There're no blogs to display</h2>
    }
</div>
<div class="pagination">
</div>
